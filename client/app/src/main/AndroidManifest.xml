<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dam.agamers.gtidic.udl.agamers">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Agamers">
        <activity android:name=".views.EditAccountActivity"></activity>
        <activity android:name=".views.UserInfoActivity" />
        <activity android:name=".views.FirstActivity" />
        <activity android:name=".CommonActivity" />
        <activity
            android:name=".views.LogInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SignUpActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>